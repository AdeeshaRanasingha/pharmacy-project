<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <!-- CartServlet Mapping -->
  <servlet>
    <servlet-name>CartServlet</servlet-name>
    <servlet-class>Servlet.CartServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>CartServlet</servlet-name>
    <url-pattern>/CartServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ClearCartServlet</servlet-name>
    <servlet-class>Servlet.ClearCartServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ClearCartServlet</servlet-name>
    <url-pattern>/ClearCartServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>OrderServlet</servlet-name>
    <servlet-class>Servlet.orderServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>OrderServlet</servlet-name>
    <url-pattern>/orderServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>OrderListServlet</servlet-name>
    <servlet-class>Servlet.OrderListServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>OrderListServlet</servlet-name>
    <url-pattern>/OrderListServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>UpdateOrderServlet</servlet-name>
    <servlet-class>controller.UpdateOrderServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>UpdateOrderServlet</servlet-name>
    <url-pattern>/UpdateOrderServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>PrescriptionServlet</servlet-name>
    <servlet-class>Servlet.PrescriptionServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>PrescriptionServlet</servlet-name>
    <url-pattern>/prescriptionServlet</url-pattern>
  </servlet-mapping>

</web-app>
